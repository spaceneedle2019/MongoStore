<h2>Neuer Kunde</h2>

<%= form_for @customer, :url => {:action => 'create'}, :method => 'post', :html => {:style => 'padding:0px;margin:0px;'} do |f| %>
    <% if @customer.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <h3><%= @customer.errors.count %> Fehler aufgetreten!</h3>
          <ul>
            <% @customer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div style="float:left;padding: 0px 10px 0px 0px;">
      <%= f.label :firstname %>
      <%= f.text_field :firstname, :style => 'width: 160px;', :class => 'form-control' %>
    </div>

    <div style="float:left;padding: 0px 10px 0px 0px;">
      <%= f.label :lastname %>
      <%= f.text_field :lastname, :style => 'width: 160px;', :class => 'form-control' %>
    </div>

    <div style="float:left;padding: 0px 10px 0px 0px;">
      <%= f.label :age %>
      <%= f.text_field :age, :style => 'width: 80px;', :placeholder => 'optional', :class => 'form-control' %>
    </div>

    <div style="float:left;padding: 0px 10px 0px 0px;">
      <%= f.label :email %>
      <%= f.text_field :email, :style => 'width: 250px;', :class => 'form-control' %>
    </div>

    <br style="clear:left"/>

